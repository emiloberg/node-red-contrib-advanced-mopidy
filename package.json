{
  "name": "node-red-contrib-advanced-mopidy",
  "version": "1.2.0",
  "description": "A Node-RED node to communicate with Mopidy",
  "scripts": {
    "postinstall": "npm run build",
    "build": "rimraf mopidy && babel --copy-files --out-dir ./mopidy ./lib",
    "lint": "eslint ./lib/* ./test/spec/*",
    "precommit": "npm run test-all && npm run lint",
    "watch": "babel --copy-files --watch --out-dir ./mopidy ./lib",
    "test": "mocha --grep 'MopidyConnected' --invert test/spec",
    "test-all": "mocha test/spec",
    "coverage": "npm run coverage-clean && babel-node isparta cover _mocha -- --grep 'MopidyConnected' --invert test/spec",
    "coverage-view": "npm run coverage && npm run coverage-open",
    "coverage-clean": "rimraf coverage",
    "coverage-open": "open ./coverage/lcov-report/index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emiloberg/node-red-contrib-advanced-mopidy.git"
  },
  "keywords": [
    "node-red",
    "node-red-contrib",
    "contrib",
    "mopidy",
    "audio",
    "home automation",
    "iot",
    "internet of things"
  ],
  "node-red": {
    "nodes": {
      "mopidy-out": "mopidy/mopidy-out.js",
      "mopidy-config": "mopidy/mopidy-config.js"
    }
  },
  "author": {
    "name": "Emil Oberg"
  },
  "license": "Apache",
  "bugs": {
    "url": "https://github.com/emiloberg/node-red-contrib-advanced-mopidy/issues"
  },
  "homepage": "https://github.com/emiloberg/node-red-contrib-advanced-mopidy",
  "dependencies": {
    "babel": "^5.8.23",
    "eyes": "^0.1.8",
    "object-assign": "^4.0.1",
    "promise": "^7.0.4",
    "rimraf": "^2.4.3",
    "validator": "^4.0.6",
    "winston": "^1.0.2"
  },
  "devDependencies": {
    "chai": "^3.3.0",
    "chai-as-promised": "^5.1.0",
    "chai-things": "^0.2.0",
    "codeclimate-test-reporter": "^0.1.1",
    "eslint": "^1.5.1",
    "eslint-plugin-html": "^1.0.4",
    "express": "^4.13.3",
    "husky": "^0.10.1",
    "isparta": "^3.1.0",
    "istanbul": "^0.3.22",
    "mocha": "^2.3.3",
    "mopidy": "^0.5.0",
    "node-red": "^0.11.2",
    "rewire": "^2.3.4",
    "should": "^7.1.0",
    "sinon": "^1.17.1",
    "sinon-chai": "^2.8.0",
    "supertest": "^1.1.0",
    "when": "^3.7.3"
  }
}
